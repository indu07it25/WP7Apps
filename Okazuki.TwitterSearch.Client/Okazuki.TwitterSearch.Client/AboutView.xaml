<UserControl x:Class="Okazuki.TwitterSearch.Client.AboutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="319*" />
        </Grid.RowDefinitions>
        <TextBlock Name="textBlock1" Text="Author : okazuki" Style="{StaticResource PhoneTextNormalStyle}" />
        <TextBlock Grid.Row="1" Name="textBlock2" Text="Application : ついさち" Style="{StaticResource PhoneTextNormalStyle}" />
        <TextBlock Grid.Row="2" Name="textBlock3" Text="Version : 0.3.0.0" Style="{StaticResource PhoneTextNormalStyle}" />
        <Button Content="アプリケーションページを表示" Grid.Row="3" Name="button1" Click="button1_Click" />
        <Image Grid.Row="4" Source="Background.png" />
    </Grid>
</UserControl>
